<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.Bankapp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_lavender</item>
        <item name="colorPrimaryVariant">#FF8A80</item>
        <item name="colorOnPrimary">@color/theme_dark_purple</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_yellow</item>
        <item name="colorSecondaryVariant">@color/theme_teal</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">#F0E7FF</item>
        <item name="pinViewStyle">@style/PinWidget.PinView</item>
    </style>
    <style name="ThemeOverlay.DigitalValley.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>
</resources>