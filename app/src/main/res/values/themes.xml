<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.Bankapp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_dark_purple</item>
        <item name="colorPrimaryVariant">#FF8A80</item>
        <item name="colorOnPrimary">@color/theme_lavender_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_yellow</item>
        <item name="colorSecondaryVariant">@color/theme_teal</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?colorOnPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/theme_dark_purple</item>
        <item name="pinViewStyle">@style/PinWidget.PinView</item>
    </style>
    <style name="Theme.Bankapp.Fullscreen" parent="Theme.Bankapp">
        <item name="android:actionBarStyle">@style/Widget.Theme.Bankapp.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.DigitalValley.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>